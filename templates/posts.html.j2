<!DOCTYPE html>
<html lang="en">

{% extends "base.html.j2" %}
<body>

    {% block topnav %}
    {% endblock %}

    {% block head %}
    {% endblock %}

    {% block msg %}
        <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-preview">
                    <h3 class="post-subtitle"><i>{{ msg | safe }}</i></h3>
                </div>
            </div>
        </div>

        </div>
    {% endblock %}

    {% block content %}
    <!-- Main Content -->
    <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

    {% for post in posts %}
                <div class="post-preview">
                    <a href="/post/{{ post['name'] }}">
                        <h2 class="post-title">{{ post['title'] | default(post['name']) }}</h2>
                        <h3 class="post-subtitle">{{ post['sub-title'] | default('') }}</h3>
                    </a>
                    <!-- <p class="post-meta">Posted on September 24, 2014</p> -->
                </div>
                {% if not loop.last %}<hr>{%  endif %}
    {% endfor %}

            </div>
        </div>
    </div>

    {% endblock %}

    {% block footer %}{% endblock %}

</body>

</html>
