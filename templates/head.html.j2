{% block head %}
<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url({{ url_for('static',filename=head_img) }})">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>{{ heading | default(blog_name) }}</h1>
                    <hr class="small">
                    <span class="subheading">{{ sub_heading | default('') }}</span>
                </div>
            </div>
        </div>
    </div>
</header>
{% endblock %}